extends layout

block content
  h1= title
  
  form(method='POST' action='')
    div.form-group
      label(for='Name') Name:
      input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===todo ? '' : todo.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
  hr
          
  ul
  each todo in todo_list
    li
      label
        input(class='check-todo' data-id=(todo._id) data-name=(todo.name) type='checkbox' checked=(todo.done))
        if todo.done
          s(id=(todo._id)) #{todo.name}
        else 
          span(id=(todo._id)) #{todo.name}

  else
    h3 There are no todos.
    
  script(src='/javascripts/todo.js')
